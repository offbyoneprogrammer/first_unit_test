<Window x:Class="WhenWillYouDie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="152" Width="251">
    <StackPanel VerticalAlignment="Center">
        <TextBlock>When will you Die?</TextBlock>
        <TextBox Name="NameBox">Enter name</TextBox>
        <TextBox Name="BirthYearBox">Enter year of birth</TextBox>
        <Button Click="CalculateButton_Click">Calculate</Button>
        <TextBlock Name="result"></TextBlock>
    </StackPanel>
</Window>
